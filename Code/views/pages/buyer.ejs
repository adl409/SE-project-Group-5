<!DOCTYPE html>
    <head>
        <link rel="stylesheet" href="css/buyer.css">
    </head>

    <body>
        <div id="header"> 
            <h1>E-Commerce Store</h1>
            <div id="headerButtons">
                <form class="buttons" method="post" action="/compare">
                    <input id="compare" type="button" value="Compare">
                </form>
                <form class="buttons" method="post" action="/logout">
                    <input id="logout" type="button" value="Log out">
                </form>
            </div>
            <a id="cart" href="cart"><img src="img/cart.png" height="75px"></a>
        </div>
        <div id="content">
            <h2>Welcome <%= name %></h2>


            <h3>Browse Books:</h3>
            <div id="table">
                <table>
                    <tr>
                        <th>ISBN</th>
                        <th>Title Of Book</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th>Add</th>
                    </tr>
                    <% books.forEach(function(book){
                    %>
                        <tr>
                            <form method="post" action="addToCart">
                                <td><%= book.isbn %></td>
                                <td><%= book.title %></td>
                                <td><%= book.author %></td>
                                <td><%= book.category %></td>
                                <td id="add"><input type="submit" value="Add to Cart"></td>
                            </form>
                        </tr>
                    <%
                    })
                    %>
                </table>
            </div>
        </div>
    </body>
</html>