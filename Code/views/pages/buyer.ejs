    <body>
        <div id="header"> 
            <h1>E-Commerce Store</h1>
            <form id="buyerButton" method="post" action="/logout">
                <input id="logout-buyer" type="submit" value="Log out">
            </form>
            <a id="cart" href="cart"><img src="img/cart.png" height="75px"></a>
        </div>
        <div id="content">
            <h1 class="title">Welcome <%= name %></h1>
            <h2 class="title">Browse Books:</h2>
            <%
            if (message != null)
            {
            %>
                <h3 class = "message"><%= message %></h3>
            <%
            }
            %>
            <%
            if (popup != null)
            {
            %>
                <div class = "popup"><h3><%= popup %></h3></div>
            <%
            }
            %>
            <div id="cards">
                <form class="card" method="post" action="/viewAllBooks" >
                    <div class="imgBx">
                        <img src="img/cart.png">
                    </div>
                    <div class="card_content">
                        <div class="card_details">
                            <h2>Book Name<br /><span>Author</span></h2>
                            <div class="data">
                                <h3>ISBN<br /><span>Series of numbers</span></h3>
                                <h3>Category<br /><span>Actual Category</span></h3>
                            </div>
                            <div class="card_button">
                                <input type="submit" value="View All Books">
                            </div>
                        </div>
                    </div>
                </form>

                <form class="card" method="post" action="/viewAllBooks" >
